pipeline {
    agent {
       label 'ubuntu'
    }
    tools {
        maven 'Maven3'
        jdk 'JDK8'
    }
    environment {
         repoSlug = "nbihan-mediware/wsdevworkflow"
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                    echo $GIT_BRANCH
                '''
            }
        }
        stage ('Analyze') {
            steps {
                    withCredentials([[$class: 'StringBinding', credentialsId: 'SONAR_TOKEN', variable: 'SONAR_TOKEN'],
                                      [$class: 'StringBinding', credentialsId: 'GITHUB_ACCESS_TOKEN', variable: 'GITHUB_ACCESS_TOKEN']]) {
                        withSonarQubeEnv('HHH Sonarqube') {
                            sh 'mvn sonar:sonar -Dsonar.analysis.mode=preview -Dsonar.host.url=${SONAR_HOST_URL} -Dsonar.github.pullRequest=${CHANGE_ID} -Dsonar.github.repository=${repoSlug} -Dsonar.github.endpoint=https://api.github.com/ -Dsonar.github.oauth=${GITHUB_ACCESS_TOKEN} -Dsonar.login=${SONAR_TOKEN}'
                        }
                    }
            }
        }
    }
}