pipeline {
    agent {
       label 'ubuntu'
    }
    tools {
        maven 'Maven3'
        jdk 'JDK8'
    }
    environment {
         githubToken = ""
         repoSlug = ""
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                    echo $GIT_BRANCH
                '''
            }
        }
        stage ('Analyze') {
            steps {
                    sh 'mvn org.jacoco:jacoco-maven-plugin:prepare-agent install -Dmaven.test.failure.ignore=true -Pcoverage-per-test'

                    script {
                       repoSlug=getRepoSlug()
                    }
                    withSonarQubeEnv('HHH Sonarqube') {
                       sh 'mvn -Dsonar.analysis.mode=preview -Dsonar.host.url=${SONAR_HOST_URL} -Dsonar.github.pullRequest=${CHANGE_ID} -Dsonar.github.repository=${repoSlug} -Dsonar.github.endpoint=https://api.github.com/ sonar:sonar'
                    }
            }
        }
    }
}